<?xml version="1.0" encoding="UTF-8"?>
<plan name="Diamond Kata discussion">
	<!-- "timeout" for a stage is an absolute number of seconds that elapses 
	(from the script's beginning) before that stage starts.  -->
	<!-- "delay" for a stage is the number seconds that elapses in-between stages.  -->
    <stage name="initiate" type="other" delay="0">  	    
        <step type="prompt" timeout="15" delay="10" prompt="WELCOME">WELCOME</step>
        <step type="greet" timeout="30" delay="5">GREETINGS</step>
        <step type="prompt" delay="5" prompt="INTRODUCE_ACTIVITY" >INTRODUCE_ACTIVITY</step>  
    </stage>
    
    <stage name="body1" type="other" delay="10">  
        <step type="match" delay="1" prompt="ASSIGN_ROLES" >ASSIGN_ROLES</step>       
        <step type="prompt" delay="10" prompt="TAKE_POSITIONS" >TAKE_SEATS_AND_WORK</step>       
        <step type="file_gated" timeout="90" delay="0" file="test-a" checkin_prompt="NONE" >FIRST_TESTCASE</step> 
    </stage>
    
    <stage name="body2" type="other" delay="10">    
        <step type="prompt" delay="5" prompt="PASSED_TESTCASE_1_PROMPT" >PASSED_TESTCASE_1_PROMPT</step>             
        <step type="rotate" delay="5" prompt="ROTATE_ROLES" >ROTATE_ROLES_STEP_2</step>      
        <step type="file_gated" timeout="90" delay="15" file="test-b" checkin_prompt="NONE" >SECOND_TESTCASE</step>  
    </stage>
    
    <stage name="body3" type="other" delay="10">    
        <step type="prompt" delay="5" prompt="PASSED_TESTCASE_2_PROMPT" >PASSED_TESTCASE_2_PROMPT</step>             
        <step type="rotate" delay="5" prompt="ROTATE_ROLES" >ROTATE_ROLES_STEP_3</step>    
        <step type="file_gated" timeout="90" delay="15" file="test-c" checkin_prompt="NONE" >THIRD_TESTCASE</step> 
    </stage>
    
    <stage name="body4" type="other" delay="10">    
        <step type="prompt" delay="5" prompt="PASSED_TESTCASE_3_PROMPT" >PASSED_TESTCASE_3_PROMPT</step>              
        <step type="rotate" delay="5" prompt="ROTATE_ROLES" >ROTATE_ROLES_STEP_3</step>    
        <step type="file_gated" timeout="90" delay="15" file="test-d" checkin_prompt="NONE" >FOURTH_TESTCASE</step> 
    </stage>
    
    <stage name="body5" type="other" delay="10">    
        <step type="prompt" delay="30" prompt="PASSED_TESTCASE_4_PROMPT" >PASSED_TESTCASE_4_PROMPT</step>            
    </stage>
    
    <stage name="EndStage" type="other" delay="0" timeout="900">
        <step type="prompt" delay="30" prompt="PROMPT_END" >PROMPT_END</step>
        <step type="logout" delay="0">LOGOUT</step>
    </stage>
    
</plan>